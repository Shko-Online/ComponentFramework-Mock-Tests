{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "lib": ["es5", "es6", "dom"],
      "module": "ES6",
      "moduleResolution": "node",
      "noEmit": false,
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true,    
      "baseUrl": ".",
      "paths": {
        "@shko-online/componentframework-mock*": ["./ComponentFramework-Mock/src*"],
        "@powerapps-samples/control-state-api*": ["./PowerApps-Samples/component-framework/ControlStateAPI*"],
        "@powerapps-samples/formatting-api*": ["./PowerApps-Samples/component-framework/FormattingAPIControl*"],
        "@powerapps-samples/lookup-simple-control*": ["./PowerApps-Samples/component-framework/LookupSimpleControl*"],
        "@albanian-xrm/test-components*": ["./__test-components__*"]
      },
      "typeRoots": [
          "./node_modules/@types"
      ]
  },
  "exclude": [
      "node_modules",
      "wwwroot",
  ],
  "include": [
      "src",
      "__tests__",
      "__test-components__"
, "dist/TestComponent", "global.d.ts"  ]
}